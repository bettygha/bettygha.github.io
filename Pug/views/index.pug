doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body #{title}
        p= message
        -var x = 5;
        div
            ul 
                - for(var i = 1; i<=x;i++){
                  li= i + ":- Hello" 
                - }
        div 
            -var droids =["R2D2","C3PO","BB8"];
            
            h1 Famous Droids from Star Wars 
            for name in droids 
                div.card 
                    h2= name
        
        -var profileName = "Danny Ocean";
        div 
            p Hi there, #{profileName}. How are you doing?
            mixin thumbnail(imageName , caption)
                div.thumbnail
                    img(src="../../#{imageName}.JPG")
                    h4.image-caption= caption
            +thumbnail("IMG_2396","RED FLOWER ")
